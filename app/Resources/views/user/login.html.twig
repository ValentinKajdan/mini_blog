{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
      <h1>Connexion</h1>

      {% if error %}
        <div>
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <form action="{{ path('login') }}" method="post">
          <fieldset>
              <legend><i class="fa fa-lock" aria-hidden="true"></i>Connection</legend>
              <div class="form-group">
                  <label for="username">{{ 'label.email' }}</label>
                  <input type="email" id="email" name="_email" value="{{ last_username }}" class="form-control"/>
              </div>
              <div class="form-group">
                  <label for="password">{{ 'label.password' }}</label>
                  <input type="password" id="password" name="_password" class="form-control" />
              </div>
              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
              <button type="submit" class="btn btn-primary">Connexion
              </button>
          </fieldset>
      </form>



    </div>
{% endblock %}
